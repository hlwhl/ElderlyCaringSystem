<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <!-- Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_sensor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sensor Bluetooth Adddress" />
        </android.support.design.widget.TextInputLayout>

        <!-- Address Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_sensor_descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe the Sensor" />
        </android.support.design.widget.TextInputLayout>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/input_sensortype">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Sensor Type:  " />

                <RadioButton
                    android:id="@+id/type_motionsensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Motion" />

                <RadioButton
                    android:id="@+id/type_Temperaturesensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature" />

                <RadioButton
                    android:id="@+id/type_counterSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kettle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="                         " />

                <RadioButton
                    android:id="@+id/type_toiletsensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toilet" />

                <RadioButton
                    android:id="@+id/type_ex1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ex1" />

                <RadioButton
                    android:id="@+id/type_ex2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ex2" />
            </LinearLayout>
        </RadioGroup>

        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add_sensor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Add Sensor" />

        <TextView
            android:id="@+id/link_cancel_addsensor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Cancel"
            android:gravity="center"
            android:textSize="16dip" />

    </LinearLayout>
</ScrollView>